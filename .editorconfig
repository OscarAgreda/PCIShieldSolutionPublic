###################################################
# Roslynator-Specific Settings (EXAMPLES)
###################################################
# If you have Roslynator.Analyzers installed, you can set severities here:
# Replace 'RCSXXXX' with real IDs from Roslynator docs that matter to you.

# e.g., RCS1098: Use auto-implemented property
dotnet_diagnostic.RCS1098.severity = suggestion

# e.g., RCS1152: Use CoalesceExpression instead of if
dotnet_diagnostic.RCS1152.severity = suggestion

# e.g., RCS1188: Use pattern matching
dotnet_diagnostic.RCS1188.severity = suggestion

# e.g., RCS1197: Sync namespace with folder structure
dotnet_diagnostic.RCS1197.severity = suggestion

# If you want to treat some advanced refactorings as warnings:
dotnet_diagnostic.RCSXXXX.severity = warning

# (If there's a duplication rule in Roslynator you'd set it similarly.)
# Note: ReSharper duplication detection isn't controlled by dotnet_diagnostic keys,
# but by ReSharper settings or SSR patterns.

###################################################
# Custom Analyzers (EXAMPLE)
###################################################
# If you create a custom analyzer (e.g., 'MY001' detects repeated domain event handling),
# you can raise it as a warning:

dotnet_diagnostic.MY001.severity = warning
# => "Detected repetitive domain event code. Suggest using Option<T> or generics."

###################################################
# 🔍 High-Signal Rules to Promote Quality
###################################################

# Enforce async methods to use await (avoid misleading "async void")
dotnet_diagnostic.CS1998.severity = warning     # Async method lacks 'await'

# Avoid returning Task without await — increases correctness
dotnet_diagnostic.CA2007.severity = warning     # Do not directly await a Task without ConfigureAwait
dotnet_diagnostic.CA2008.severity = warning     # Do not create tasks without passing a TaskScheduler

# Guard clauses on public API inputs (great for DDD aggregates + application layer)
dotnet_diagnostic.CA1062.severity = warning     # Validate arguments of public methods

# Exception handling hygiene
dotnet_diagnostic.CA1031.severity = warning     # Avoid catching general exception types

# Leaky abstraction patterns (e.g., disposing injected services)
dotnet_diagnostic.IDISP001.severity = warning   # Don't dispose injected services (from IDisposable analyzers)

# Naming correctness (important for domain naming discipline)
dotnet_diagnostic.S101.severity = warning       # Classes and methods should be PascalCase

# Treat null-forgiving operator usage with caution
dotnet_diagnostic.CS8602.severity = none     # Dereference of a possibly null reference
dotnet_diagnostic.CS8618.severity = none     # Non-nullable field is uninitialized

# Task-returning async method missing async keyword
dotnet_diagnostic.ASYNC0001.severity = warning  # You likely want to await the returned Task (requires AsyncFixer)

# (Optional) If you use AsyncFixer from NuGet:
dotnet_diagnostic.AsyncFixer01.severity = warning  # Unnecessary async/await
dotnet_diagnostic.AsyncFixer02.severity = warning  # Long-running blocking calls

###################################################
# 🚫 Disable Known Low-Value Warnings (Noise)
###################################################

# Remove redundant warnings from ReSharper or analyzers you already cover with test suites
dotnet_diagnostic.IDE0051.severity = none   # Remove unused private members
dotnet_diagnostic.IDE0052.severity = none   # Private fields that are assigned but never used
dotnet_diagnostic.IDE0060.severity = none   # Remove unused parameter

# Example suppression for "use var" noise
dotnet_diagnostic.IDE0007.severity = none   # Use implicit type (var)

###################################################
# 🧠 Optional: DDD-Aware Suggestions (Your Domain Layer)
###################################################

# Encourage immutability in domain aggregates
dotnet_diagnostic.RCS1170.severity = none   # Use read-only fields when possible

# Discourage public setters in Value Objects
dotnet_diagnostic.S2339.severity = suggestion     # Make fields readonly (Sonar)

# Discourage empty catch blocks — reveal intent
dotnet_diagnostic.S108.severity = warning         # Avoid empty catch blocks

# Encourage meaningful equals overrides in VOs
dotnet_diagnostic.CA1046.severity = warning       # Equals should be overridden

# (Optional) Suggest simplifying null-checks for Option<T> friendly code
dotnet_diagnostic.RCS1096.severity = suggestion   # Use null-coalescing or conditional access

###################################################
# 🔕 Oscar: Suppress Specific Roslyn Warnings
# Reason: Design decisions acknowledged, warnings not actionable
###################################################

# Duplicate using directive (e.g., 'using System' appears more than once)
dotnet_diagnostic.CS0105.severity = none

# Possible null reference assignment
dotnet_diagnostic.CS8601.severity = none
dotnet_diagnostic.CS8604.severity = none

# Dereference of a possibly null reference
dotnet_diagnostic.CS8602.severity = none

# Cannot convert null literal to non-nullable reference type
dotnet_diagnostic.CS8625.severity = none

# Non-nullable property must contain a value (e.g., constructor doesn't initialize it)
dotnet_diagnostic.CS8618.severity = none

# Possible null reference return
dotnet_diagnostic.CS8603.severity = none
