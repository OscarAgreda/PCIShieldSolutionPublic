@code {

    [Parameter]
    public Guid MerchantId { get; set; }

    [Parameter] public string _assetEditingUserId { get; set; }

    [Parameter]
    public List<AssetDto> Assets { get; set; } = new();


    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public EventCallback<(Exception ex, ErrorHandlingService.ClientOperationContext context)> OnError { get; set; }



    [Parameter]
    public EventCallback<AssetDto> OnAssetAdded { get; set; }


    [Parameter]
    public EventCallback<AssetDto> OnAssetUpdated { get; set; }


    [Parameter]
    public EventCallback<AssetDto> OnAssetDeleted { get; set; }

    private IValidator<AssetDto> _updateAssetValidator;

    private readonly CompositeDisposable _disposables = new();

    protected override async Task OnInitializedAsync()
    {
        _updateAssetValidator = new InlineValidator<AssetDto>();
        await base.OnInitializedAsync();
    }


    protected void RefreshUi()
    {
        //InvokeAsync(StateHasChanged);
    }




    private async Task AddChildItemAsset()
    {
        await TryAsync(async () =>
        {
            var newAsset = new AssetDto
                {
                    MerchantId = MerchantId,
                CreatedAt = DateTime.UtcNow,
                    CreatedBy = Guid.Parse(_assetEditingUserId),
                };
            var validationResult = await _updateAssetValidator.ValidateAsync(newAsset);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssetCreate));
                return;
            }
            var response = await _merchantHttpService.CreateAssetAsync(newAsset).ToObservable().ToListObservable().ToTryOption().ToAsync().ToTry();
            await response.Match(
                Succ: result =>
                    result.Match(
                        Some: async backResult =>
                        {
                            Assets.Add(backResult.Asset);
                        },
                        None: () =>
                        {
                            Snackbar.Add(Localizer["Failed to create asset"], Severity.Error);
                            return Task.CompletedTask;
                        }
                    ),
                Fail: ex =>
                {
                    _logger.LogError(ex, "Error creating asset");
                    Snackbar.Add(Localizer["Error creating asset"], Severity.Error);
                    return Task.CompletedTask;
                }
            );
        });
    }


    private async Task EditChildItemAsset(AssetDto item)
    {
        try
        {
            var validationResult = await _updateAssetValidator.ValidateAsync(item);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssetUpdate));
                return;
            }
            AssetDto? response = await _merchantHttpService.UpdateAssetAsync(item);
            if (response != null)
            {
                var index = Assets.FindIndex(x => x.AssetId == item.AssetId);
                if (index != -1)
                {
                    Assets[index] = response;
                }
            }
        }
        catch (Exception ex)
        {
            await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssetCreate));
        }
    }

    private async Task<bool> ShowDeleteConfirmDialog()
    {
        bool? result = await DialogService.ShowMessageBox("Confirm Delete", "Are you sure you want to delete this item?", yesText: "Delete", cancelText: "Cancel");
        if (result == true)
        {
            return await Task.FromResult(true);
        }
        else
        {
            return await Task.FromResult(false);
        }
    }

    private async Task DeleteChildItemAsset(AssetDto asset)
    {
        try
        {
            var dialogResult = await ShowDeleteConfirmDialog();
            if (dialogResult)
            {
                await TryAsync(async () =>
                {
                    var validationResult = await _updateAssetValidator.ValidateAsync(asset);
                    if (!validationResult.IsValid)
                    {
                        var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                        var ex = new Exception(errors);
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssetDelete));
                        return;
                    }
                    await _merchantHttpService
                        .DeleteAssetAsync(asset.AssetId)
                        .ToObservable()
                        .ToListObservable()
                        .ToTryOption()
                        .ToAsync()
                        .ToTry()
                        .Match(
                            Succ: async _ =>
                            {
                                Assets.Remove(asset);
                            },
                            Fail: ex =>
                            {
                                _logger.LogError(ex, "Failed to delete asset");
                                Snackbar.Add(Localizer["Failed to delete asset"], Severity.Error);
                                return Task.CompletedTask;
                            }
                        );
                });
            }
        }
        catch (Exception ex)
        {
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssetDelete));
        }
    }




    public async ValueTask DisposeAsync()
    {
        _disposables.Dispose();
    }


}


