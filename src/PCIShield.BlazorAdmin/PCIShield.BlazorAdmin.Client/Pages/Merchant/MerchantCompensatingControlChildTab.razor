@code {

    [Parameter]
    public Guid MerchantId { get; set; }

    [Parameter] public string _compensatingControlEditingUserId { get; set; }

    [Parameter]
    public List<CompensatingControlDto> CompensatingControls { get; set; } = new();


    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public EventCallback<(Exception ex, ErrorHandlingService.ClientOperationContext context)> OnError { get; set; }



    [Parameter]
    public EventCallback<CompensatingControlDto> OnCompensatingControlAdded { get; set; }


    [Parameter]
    public EventCallback<CompensatingControlDto> OnCompensatingControlUpdated { get; set; }


    [Parameter]
    public EventCallback<CompensatingControlDto> OnCompensatingControlDeleted { get; set; }

    private IValidator<CompensatingControlDto> _updateCompensatingControlValidator;

    private readonly CompositeDisposable _disposables = new();

    protected override async Task OnInitializedAsync()
    {
        _updateCompensatingControlValidator = new InlineValidator<CompensatingControlDto>();
        await base.OnInitializedAsync();
    }


    protected void RefreshUi()
    {
        //InvokeAsync(StateHasChanged);
    }




    private async Task AddChildItemCompensatingControl()
    {
        await TryAsync(async () =>
        {
            var newCompensatingControl = new CompensatingControlDto
                {
                    MerchantId = MerchantId,
                CreatedAt = DateTime.UtcNow,
                    CreatedBy = Guid.Parse(_compensatingControlEditingUserId),
                };
            var validationResult = await _updateCompensatingControlValidator.ValidateAsync(newCompensatingControl);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.CompensatingControlCreate));
                return;
            }
            var response = await _merchantHttpService.CreateCompensatingControlAsync(newCompensatingControl).ToObservable().ToListObservable().ToTryOption().ToAsync().ToTry();
            await response.Match(
                Succ: result =>
                    result.Match(
                        Some: async backResult =>
                        {
                            CompensatingControls.Add(backResult.CompensatingControl);
                        },
                        None: () =>
                        {
                            Snackbar.Add(Localizer["Failed to create compensatingControl"], Severity.Error);
                            return Task.CompletedTask;
                        }
                    ),
                Fail: ex =>
                {
                    _logger.LogError(ex, "Error creating compensatingControl");
                    Snackbar.Add(Localizer["Error creating compensatingControl"], Severity.Error);
                    return Task.CompletedTask;
                }
            );
        });
    }


    private async Task EditChildItemCompensatingControl(CompensatingControlDto item)
    {
        try
        {
            var validationResult = await _updateCompensatingControlValidator.ValidateAsync(item);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.CompensatingControlUpdate));
                return;
            }
            CompensatingControlDto? response = await _merchantHttpService.UpdateCompensatingControlAsync(item);
            if (response != null)
            {
                var index = CompensatingControls.FindIndex(x => x.CompensatingControlId == item.CompensatingControlId);
                if (index != -1)
                {
                    CompensatingControls[index] = response;
                }
            }
        }
        catch (Exception ex)
        {
            await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.CompensatingControlCreate));
        }
    }

    private async Task<bool> ShowDeleteConfirmDialog()
    {
        bool? result = await DialogService.ShowMessageBox("Confirm Delete", "Are you sure you want to delete this item?", yesText: "Delete", cancelText: "Cancel");
        if (result == true)
        {
            return await Task.FromResult(true);
        }
        else
        {
            return await Task.FromResult(false);
        }
    }

    private async Task DeleteChildItemCompensatingControl(CompensatingControlDto compensatingControl)
    {
        try
        {
            var dialogResult = await ShowDeleteConfirmDialog();
            if (dialogResult)
            {
                await TryAsync(async () =>
                {
                    var validationResult = await _updateCompensatingControlValidator.ValidateAsync(compensatingControl);
                    if (!validationResult.IsValid)
                    {
                        var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                        var ex = new Exception(errors);
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.CompensatingControlDelete));
                        return;
                    }
                    await _merchantHttpService
                        .DeleteCompensatingControlAsync(compensatingControl.CompensatingControlId)
                        .ToObservable()
                        .ToListObservable()
                        .ToTryOption()
                        .ToAsync()
                        .ToTry()
                        .Match(
                            Succ: async _ =>
                            {
                                CompensatingControls.Remove(compensatingControl);
                            },
                            Fail: ex =>
                            {
                                _logger.LogError(ex, "Failed to delete compensatingControl");
                                Snackbar.Add(Localizer["Failed to delete compensatingControl"], Severity.Error);
                                return Task.CompletedTask;
                            }
                        );
                });
            }
        }
        catch (Exception ex)
        {
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.CompensatingControlDelete));
        }
    }




    public async ValueTask DisposeAsync()
    {
        _disposables.Dispose();
    }


}


