@code {

    [Parameter]
    public Guid MerchantId { get; set; }

    [Parameter] public string _networkSegmentationEditingUserId { get; set; }

    [Parameter]
    public List<NetworkSegmentationDto> NetworkSegmentations { get; set; } = new();


    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public EventCallback<(Exception ex, ErrorHandlingService.ClientOperationContext context)> OnError { get; set; }



    [Parameter]
    public EventCallback<NetworkSegmentationDto> OnNetworkSegmentationAdded { get; set; }


    [Parameter]
    public EventCallback<NetworkSegmentationDto> OnNetworkSegmentationUpdated { get; set; }


    [Parameter]
    public EventCallback<NetworkSegmentationDto> OnNetworkSegmentationDeleted { get; set; }

    private IValidator<NetworkSegmentationDto> _updateNetworkSegmentationValidator;

    private readonly CompositeDisposable _disposables = new();

    protected override async Task OnInitializedAsync()
    {
        _updateNetworkSegmentationValidator = new InlineValidator<NetworkSegmentationDto>();
        await base.OnInitializedAsync();
    }


    protected void RefreshUi()
    {
        //InvokeAsync(StateHasChanged);
    }




    private async Task AddChildItemNetworkSegmentation()
    {
        await TryAsync(async () =>
        {
            var newNetworkSegmentation = new NetworkSegmentationDto
                {
                    MerchantId = MerchantId,
                CreatedAt = DateTime.UtcNow,
                    CreatedBy = Guid.Parse(_networkSegmentationEditingUserId),
                };
            var validationResult = await _updateNetworkSegmentationValidator.ValidateAsync(newNetworkSegmentation);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.NetworkSegmentationCreate));
                return;
            }
            var response = await _merchantHttpService.CreateNetworkSegmentationAsync(newNetworkSegmentation).ToObservable().ToListObservable().ToTryOption().ToAsync().ToTry();
            await response.Match(
                Succ: result =>
                    result.Match(
                        Some: async backResult =>
                        {
                            NetworkSegmentations.Add(backResult.NetworkSegmentation);
                        },
                        None: () =>
                        {
                            Snackbar.Add(Localizer["Failed to create networkSegmentation"], Severity.Error);
                            return Task.CompletedTask;
                        }
                    ),
                Fail: ex =>
                {
                    _logger.LogError(ex, "Error creating networkSegmentation");
                    Snackbar.Add(Localizer["Error creating networkSegmentation"], Severity.Error);
                    return Task.CompletedTask;
                }
            );
        });
    }


    private async Task EditChildItemNetworkSegmentation(NetworkSegmentationDto item)
    {
        try
        {
            var validationResult = await _updateNetworkSegmentationValidator.ValidateAsync(item);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.NetworkSegmentationUpdate));
                return;
            }
            NetworkSegmentationDto? response = await _merchantHttpService.UpdateNetworkSegmentationAsync(item);
            if (response != null)
            {
                var index = NetworkSegmentations.FindIndex(x => x.NetworkSegmentationId == item.NetworkSegmentationId);
                if (index != -1)
                {
                    NetworkSegmentations[index] = response;
                }
            }
        }
        catch (Exception ex)
        {
            await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.NetworkSegmentationCreate));
        }
    }

    private async Task<bool> ShowDeleteConfirmDialog()
    {
        bool? result = await DialogService.ShowMessageBox("Confirm Delete", "Are you sure you want to delete this item?", yesText: "Delete", cancelText: "Cancel");
        if (result == true)
        {
            return await Task.FromResult(true);
        }
        else
        {
            return await Task.FromResult(false);
        }
    }

    private async Task DeleteChildItemNetworkSegmentation(NetworkSegmentationDto networkSegmentation)
    {
        try
        {
            var dialogResult = await ShowDeleteConfirmDialog();
            if (dialogResult)
            {
                await TryAsync(async () =>
                {
                    var validationResult = await _updateNetworkSegmentationValidator.ValidateAsync(networkSegmentation);
                    if (!validationResult.IsValid)
                    {
                        var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                        var ex = new Exception(errors);
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.NetworkSegmentationDelete));
                        return;
                    }
                    await _merchantHttpService
                        .DeleteNetworkSegmentationAsync(networkSegmentation.NetworkSegmentationId)
                        .ToObservable()
                        .ToListObservable()
                        .ToTryOption()
                        .ToAsync()
                        .ToTry()
                        .Match(
                            Succ: async _ =>
                            {
                                NetworkSegmentations.Remove(networkSegmentation);
                            },
                            Fail: ex =>
                            {
                                _logger.LogError(ex, "Failed to delete networkSegmentation");
                                Snackbar.Add(Localizer["Failed to delete networkSegmentation"], Severity.Error);
                                return Task.CompletedTask;
                            }
                        );
                });
            }
        }
        catch (Exception ex)
        {
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.NetworkSegmentationDelete));
        }
    }




    public async ValueTask DisposeAsync()
    {
        _disposables.Dispose();
    }


}


