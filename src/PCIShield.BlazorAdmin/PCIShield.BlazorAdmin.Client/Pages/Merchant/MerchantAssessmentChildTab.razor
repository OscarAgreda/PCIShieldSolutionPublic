@code {

    [Parameter]
    public Guid MerchantId { get; set; }

    [Parameter] public string _assessmentEditingUserId { get; set; }

    [Parameter]
    public List<AssessmentDto> Assessments { get; set; } = new();


    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public EventCallback<(Exception ex, ErrorHandlingService.ClientOperationContext context)> OnError { get; set; }



    [Parameter]
    public EventCallback<AssessmentDto> OnAssessmentAdded { get; set; }


    [Parameter]
    public EventCallback<AssessmentDto> OnAssessmentUpdated { get; set; }


    [Parameter]
    public EventCallback<AssessmentDto> OnAssessmentDeleted { get; set; }

    private IValidator<AssessmentDto> _updateAssessmentValidator;

    private readonly CompositeDisposable _disposables = new();

    protected override async Task OnInitializedAsync()
    {
        _updateAssessmentValidator = new InlineValidator<AssessmentDto>();
        await base.OnInitializedAsync();
    }


    protected void RefreshUi()
    {
        //InvokeAsync(StateHasChanged);
    }




    private async Task AddChildItemAssessment()
    {
        await TryAsync(async () =>
        {
            var newAssessment = new AssessmentDto
                {
                    MerchantId = MerchantId,
                CreatedAt = DateTime.UtcNow,
                    CreatedBy = Guid.Parse(_assessmentEditingUserId),
                };
            var validationResult = await _updateAssessmentValidator.ValidateAsync(newAssessment);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssessmentCreate));
                return;
            }
            var response = await _merchantHttpService.CreateAssessmentAsync(newAssessment).ToObservable().ToListObservable().ToTryOption().ToAsync().ToTry();
            await response.Match(
                Succ: result =>
                    result.Match(
                        Some: async backResult =>
                        {
                            Assessments.Add(backResult.Assessment);
                        },
                        None: () =>
                        {
                            Snackbar.Add(Localizer["Failed to create assessment"], Severity.Error);
                            return Task.CompletedTask;
                        }
                    ),
                Fail: ex =>
                {
                    _logger.LogError(ex, "Error creating assessment");
                    Snackbar.Add(Localizer["Error creating assessment"], Severity.Error);
                    return Task.CompletedTask;
                }
            );
        });
    }


    private async Task EditChildItemAssessment(AssessmentDto item)
    {
        try
        {
            var validationResult = await _updateAssessmentValidator.ValidateAsync(item);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssessmentUpdate));
                return;
            }
            AssessmentDto? response = await _merchantHttpService.UpdateAssessmentAsync(item);
            if (response != null)
            {
                var index = Assessments.FindIndex(x => x.AssessmentId == item.AssessmentId);
                if (index != -1)
                {
                    Assessments[index] = response;
                }
            }
        }
        catch (Exception ex)
        {
            await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssessmentCreate));
        }
    }

    private async Task<bool> ShowDeleteConfirmDialog()
    {
        bool? result = await DialogService.ShowMessageBox("Confirm Delete", "Are you sure you want to delete this item?", yesText: "Delete", cancelText: "Cancel");
        if (result == true)
        {
            return await Task.FromResult(true);
        }
        else
        {
            return await Task.FromResult(false);
        }
    }

    private async Task DeleteChildItemAssessment(AssessmentDto assessment)
    {
        try
        {
            var dialogResult = await ShowDeleteConfirmDialog();
            if (dialogResult)
            {
                await TryAsync(async () =>
                {
                    var validationResult = await _updateAssessmentValidator.ValidateAsync(assessment);
                    if (!validationResult.IsValid)
                    {
                        var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                        var ex = new Exception(errors);
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssessmentDelete));
                        return;
                    }
                    await _merchantHttpService
                        .DeleteAssessmentAsync(assessment.AssessmentId)
                        .ToObservable()
                        .ToListObservable()
                        .ToTryOption()
                        .ToAsync()
                        .ToTry()
                        .Match(
                            Succ: async _ =>
                            {
                                Assessments.Remove(assessment);
                            },
                            Fail: ex =>
                            {
                                _logger.LogError(ex, "Failed to delete assessment");
                                Snackbar.Add(Localizer["Failed to delete assessment"], Severity.Error);
                                return Task.CompletedTask;
                            }
                        );
                });
            }
        }
        catch (Exception ex)
        {
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.AssessmentDelete));
        }
    }




    public async ValueTask DisposeAsync()
    {
        _disposables.Dispose();
    }


}


