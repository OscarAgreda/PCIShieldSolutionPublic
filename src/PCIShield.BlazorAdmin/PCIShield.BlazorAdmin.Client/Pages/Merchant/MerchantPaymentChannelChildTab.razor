@code {

    [Parameter]
    public Guid MerchantId { get; set; }

    [Parameter] public string _paymentChannelEditingUserId { get; set; }

    [Parameter]
    public List<PaymentChannelDto> PaymentChannels { get; set; } = new();


    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public EventCallback<(Exception ex, ErrorHandlingService.ClientOperationContext context)> OnError { get; set; }



    [Parameter]
    public EventCallback<PaymentChannelDto> OnPaymentChannelAdded { get; set; }


    [Parameter]
    public EventCallback<PaymentChannelDto> OnPaymentChannelUpdated { get; set; }


    [Parameter]
    public EventCallback<PaymentChannelDto> OnPaymentChannelDeleted { get; set; }

    private IValidator<PaymentChannelDto> _updatePaymentChannelValidator;

    private readonly CompositeDisposable _disposables = new();

    protected override async Task OnInitializedAsync()
    {
        _updatePaymentChannelValidator = new InlineValidator<PaymentChannelDto>();
        await base.OnInitializedAsync();
    }


    protected void RefreshUi()
    {
        //InvokeAsync(StateHasChanged);
    }




    private async Task AddChildItemPaymentChannel()
    {
        await TryAsync(async () =>
        {
            var newPaymentChannel = new PaymentChannelDto
                {
                    MerchantId = MerchantId,
                CreatedAt = DateTime.UtcNow,
                    CreatedBy = Guid.Parse(_paymentChannelEditingUserId),
                };
            var validationResult = await _updatePaymentChannelValidator.ValidateAsync(newPaymentChannel);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.PaymentChannelCreate));
                return;
            }
            var response = await _merchantHttpService.CreatePaymentChannelAsync(newPaymentChannel).ToObservable().ToListObservable().ToTryOption().ToAsync().ToTry();
            await response.Match(
                Succ: result =>
                    result.Match(
                        Some: async backResult =>
                        {
                            PaymentChannels.Add(backResult.PaymentChannel);
                        },
                        None: () =>
                        {
                            Snackbar.Add(Localizer["Failed to create paymentChannel"], Severity.Error);
                            return Task.CompletedTask;
                        }
                    ),
                Fail: ex =>
                {
                    _logger.LogError(ex, "Error creating paymentChannel");
                    Snackbar.Add(Localizer["Error creating paymentChannel"], Severity.Error);
                    return Task.CompletedTask;
                }
            );
        });
    }


    private async Task EditChildItemPaymentChannel(PaymentChannelDto item)
    {
        try
        {
            var validationResult = await _updatePaymentChannelValidator.ValidateAsync(item);
            if (!validationResult.IsValid)
            {
                var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                var ex = new Exception(errors);
                await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.PaymentChannelUpdate));
                return;
            }
            PaymentChannelDto? response = await _merchantHttpService.UpdatePaymentChannelAsync(item);
            if (response != null)
            {
                var index = PaymentChannels.FindIndex(x => x.PaymentChannelId == item.PaymentChannelId);
                if (index != -1)
                {
                    PaymentChannels[index] = response;
                }
            }
        }
        catch (Exception ex)
        {
            await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.PaymentChannelCreate));
        }
    }

    private async Task<bool> ShowDeleteConfirmDialog()
    {
        bool? result = await DialogService.ShowMessageBox("Confirm Delete", "Are you sure you want to delete this item?", yesText: "Delete", cancelText: "Cancel");
        if (result == true)
        {
            return await Task.FromResult(true);
        }
        else
        {
            return await Task.FromResult(false);
        }
    }

    private async Task DeleteChildItemPaymentChannel(PaymentChannelDto paymentChannel)
    {
        try
        {
            var dialogResult = await ShowDeleteConfirmDialog();
            if (dialogResult)
            {
                await TryAsync(async () =>
                {
                    var validationResult = await _updatePaymentChannelValidator.ValidateAsync(paymentChannel);
                    if (!validationResult.IsValid)
                    {
                        var errors = string.Join("; ", validationResult.Errors.Select(e => e.ErrorMessage));
                        var ex = new Exception(errors);
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.PaymentChannelDelete));
                        return;
                    }
                    await _merchantHttpService
                        .DeletePaymentChannelAsync(paymentChannel.PaymentChannelId)
                        .ToObservable()
                        .ToListObservable()
                        .ToTryOption()
                        .ToAsync()
                        .ToTry()
                        .Match(
                            Succ: async _ =>
                            {
                                PaymentChannels.Remove(paymentChannel);
                            },
                            Fail: ex =>
                            {
                                _logger.LogError(ex, "Failed to delete paymentChannel");
                                Snackbar.Add(Localizer["Failed to delete paymentChannel"], Severity.Error);
                                return Task.CompletedTask;
                            }
                        );
                });
            }
        }
        catch (Exception ex)
        {
                        await OnError.InvokeAsync((ex, ErrorHandlingService.ClientOperationContext.PaymentChannelDelete));
        }
    }




    public async ValueTask DisposeAsync()
    {
        _disposables.Dispose();
    }


}


