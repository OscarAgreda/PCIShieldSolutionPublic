{
  "baseUrls": {
    "apiBase": "https://localhost:52509/"
  },

  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },

  "JwtSettings": {
    "PCISHIELDAPP_ISSUER": "",
    "PCISHIELDAPP_AUDIENCE": "PCIShieldCustomer",
    "PCISHIELDAPP_SECRET_KEY": "${PCISHIELDAPP_SECRET_KEY}"
  },
  "EmailSettings": {
    "from_name": "pciShieldapp app",
    "from_email": "sys@oscar.com",
    "host": "smtp.gmail.com",
    "port": "587",
    "client_id": "766868875298-tb56trfub85eq1evdq5dklfcovqfi9tq.apps.googleusercontent.com",
    "project_id": "pciShieldappnewapp",
    "auth_uri": "https://accounts.google.com/o/oauth2/auth",
    "token_uri": "https://oauth2.googleapis.com/token",
    "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
    "client_secret": "${GMAIL_CLIENT_SECRET}",
    "redirect_uri": "https://oauth-redirect.googleusercontent.com/r/pciShieldappnewapp",

    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "UseSmtpSsl": true,
    "Username": "",
    "Password": "${EMAIL_PASSWORD}",

    "AppPassword": "${EMAIL_APP_PASSWORD}",
    "ImapServer": "imap.gmail.com",
    "ImapPort": 993,
    "UseImapSsl": true

  },

  "Redis": {
    "ConnectionString": "redis:6379,password=${REDIS_PASSWORD},ssl=true,abortConnect=false",
    "InstanceName": "PCIShield:",
    "DefaultExpiryMinutes": 6
  },

  "Elasticsearch": {
    "CloudId": "",
    "ApiKey": "",
    "Url": "http://elasticsearch:9200",
    "Username": "elastic",
    "Password": "${ELASTICSEARCH_PASSWORD}",
    "DefaultIndex": "pciShield_erp",
    "CertificateFingerprint": "${ELASTICSEARCH_CERT_FINGERPRINT}",
    "EnableDebugMode": false,
    "RequestTimeoutMinutes": 2
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=sqlserver,1433;Database=PCIShield_Core_Db;User Id=sa;Password=${SQL_SERVER_PASSWORD};TrustServerCertificate=True;MultipleActiveResultSets=True;Connect Timeout=30",
    "AuthorizationConnection": "Server=sqlserver,1433;Database=PCIShieldAuthDb;User Id=sa;Password=${SQL_SERVER_PASSWORD};TrustServerCertificate=True;MultipleActiveResultSets=True;Connect Timeout=30",
    "PostgreSQLConnection": "Host=postgresql;Database=PCIShieldPostgreSQLDb;Username=admin;Password=${POSTGRESQL_PASSWORD}",
    "MongoDbConnection": "mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@mongodb",
    "RedisConnection": "redis:6379,password=${REDIS_PASSWORD},ssl=true,abortConnect=false"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 2000
      }
    ]
  },

  "AllowedHosts": "*",
  "RabbitMq": {
    "HostName": "rabbitmq",
    "UserName": "PCIShieldUser",
    "Password": "${RABBITMQ_PASSWORD}",
    "Port": "5672",
    "VirtualHost": "/",
    "ExchangeName": "ERPExchange",
    "Enabled": "true",
    "ServerName": "rabbitmq",
    "CertPath": "./my-rabbitmq.crt",
    "CertPassphrase": "${RABBITMQ_CERT_PASSPHRASE}",
    "PCIShieldUser": "PCIShieldUser",
    "PCIShieldAppPassword": "${RABBITMQ_PASSWORD}"
  },
  "Neo4j": {
    "Url": "bolt://neo4j:7687",
    "Username": "neo4j",
    "Password": "${NEO4J_PASSWORD}"
  },
  "KafkaProducerConfig": {
    "BootstrapServers": "Kafka"
  },
  "Sentry": {
    "Dsn": "${SENTRY_DSN}",
    "SendDefaultPii": true,
    "MaxRequestBodySize": "Always",
    "MinimumBreadcrumbLevel": "Debug",
    "MinimumEventLevel": "Warning",
    "AttachStackTrace": true,
    "Debug": true,
    "DiagnosticLevel": "Error",
    "TracesSampleRate": 1.0
  }

}
