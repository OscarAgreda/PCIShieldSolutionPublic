{
  "baseUrls": {
    "apiBase": "https://localhost:52509/"
    //"webBase": "https://localhost:7183/",
    //"webBase2": "https://localhost:7185/"
  },

  //https://github.com/dotnet/AspNetCore.Docs/blob/main/aspnetcore/fundamentals/servers/kestrel/endpoints.md
  //https://blog.ladeak.net/posts/aspnetcore-https
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1"
    }
  },

  "JwtSettings": {
    "PCISHIELDAPP_ISSUER": "https://localhost:52509/", // Replace with our domain
    "PCISHIELDAPP_AUDIENCE": "PCIShieldCustomer", // areplace with app name
    "PCISHIELDAPP_SECRET_KEY": "${PCISHIELDAPP_SECRET_KEY}" // any  strong key
  },
  "EmailSettings": {
    "from_name": "pciShieldapp app",
    "from_email": "${EMAIL_FROM}",
    "host": "smtp.gmail.com",
    "port": "587", // 587  //https://github.com/jstedfast/MailKit/blob/master/GMailOAuth2.md
    "client_id": "766868875298-tb56trfub85eq1evdq5dklfcovqfi9tq.apps.googleusercontent.com",
    "project_id": "pciShieldappnewapp",
    "auth_uri": "https://accounts.google.com/o/oauth2/auth",
    "token_uri": "https://oauth2.googleapis.com/token",
    "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
    "client_secret": "${GMAIL_CLIENT_SECRET}",
    "redirect_uri": "https://oauth-redirect.googleusercontent.com/r/pciShieldappnewapp",


    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587, // Gmail SMTP port for TLS/SSL
    "UseSmtpSsl": true, // Use SSL/TLS encryption
    "Username": "${EMAIL_USERNAME}", // Your Gmail email address
    "Password": "${EMAIL_PASSWORD}", // Your Gmail password
   

    "AppPassword": "${EMAIL_APP_PASSWORD}",

 
    "ImapServer": "imap.gmail.com",
    "ImapPort": 993, // Standard port for IMAP over SSL
    "UseImapSsl": true // Use SSL/TLS encryption for IMAP

  },

  "ConnectionStrings": {

    "DefaultConnection": "Server=.;Integrated Security=true;Initial Catalog=PCIShield_Core_Db;Encrypt=False",
    "AuthorizationConnection": "Server=tcp:.;Initial Catalog=PCIShieldAuthDb;Encrypt=False;Persist Security Info=True;User ID=sa;Password=${SQL_SERVER_PASSWORD};MultipleActiveResultSets=True;TrustServerCertificate=True",



    "PostgreSQLConnection": "Host=postgresql;Database=PCIShieldPostgreSQLDb;Username=admin;Password=${POSTGRESQL_PASSWORD}",
    "MongoDbConnection": "mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/PCIShieldMongoDb?authSource=admin&connectTimeoutMS=30000&socketTimeoutMS=30000"



  },
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
      // "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Error" // Uncomment if using HTTP logging and wish to log only errors (though HTTP logging does not directly support error-level filtering in this way)
    }
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false, // EnableEndpointRateLimiting: When set to false, this means that the library won't apply rate limits based on the request path. If set to true, you can define rate limits for specific endpoints.
    "StackBlockedRequests": false, // StackBlockedRequests: When set to false, each blocked request (over the limit) doesn't count against future rate limits. If set to true, blocked requests would stack up and could cause the client to be blocked for an extended period.
    "RealIpHeader": "X-Real-IP", //RealIpHeader: This indicates the HTTP header used to retrieve the real IP address of the client. The default value is "X-Real-IP"
    "ClientIdHeader": "X-ClientId", //ClientIdHeader: This is the HTTP header used to identify the client, defaulting to "X-ClientId".
    "HttpStatusCode": 429, // HttpStatusCode: This is the HTTP status code returned when a client exceeds the rate limit. The default value is 429, which stands for "Too Many Requests".
    "GeneralRules": [ // GeneralRules: These are the global rate limiting rules. Your rule means that any IP ("Endpoint": "*") is limited to 10 requests ("Limit": 10) per minute ("Period": "1m").
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 2000
      }
    ]
  },

  "AllowedHosts": "*",

  "RabbitMq": {
    "HostName": "${RABBITMQ_HOST}", //"25.42.128.141",
    "UserName": "PCIShieldUser",
    "Password": "${RABBITMQ_PASSWORD}",
    "Port": "5672",
    "VirtualHost": "/",
    "ExchangeName": "ERPExchange",
    "Enabled": "true",
    "ServerName": "rabbitmq",
    "CertPath": "./my-rabbitmq.crt",
    "CertPassphrase": "${RABBITMQ_CERT_PASSPHRASE}",
    "PCIShieldUser": "PCIShieldUser",
    "PCIShieldAppPassword": "${RABBITMQ_PASSWORD}"





  },
  "KafkaProducerConfig": {
    "BootstrapServers": "${KAFKA_BOOTSTRAP_SERVERS}"
  }
}
